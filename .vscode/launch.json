{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test App",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "skipFiles": [
                "node_modules/**"
            ],
            "args": [
                "test",
                "--runInBand",
                "--no-cache",
                "--watchAll"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}